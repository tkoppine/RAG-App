# =============================================================================
# ArXiv Research Assistant - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!

# =============================================================================
# LLM API Configuration
# =============================================================================

# Groq API Key (for Llama models - free tier available)
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API Key (optional - uncomment if using OpenAI models)
# Get your key from: https://platform.openai.com/account/api-keys
# OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# Data directory for storing indices and databases
DATA_DIR=data

# FAISS Index Configuration
FAISS_INDEX_FILE=data/faiss_index.idx
FAISS_MAPPING_FILE=data/embeddings_mapping.json

# RocksDB Configuration
ROCKSDB_PATH=data/rocksdb

# Papers data JSON file
PAPERS_DATA_JSON=data/combined_data.json

# =============================================================================
# Django Configuration
# =============================================================================

# Django Secret Key (generate a new one for production)
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your_django_secret_key_here

# Django Debug Mode (set to False in production)
DJANGO_DEBUG=True

# Allowed hosts (comma-separated, use * for development only)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Django Database URL (optional - defaults to SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# =============================================================================
# File Storage Configuration
# =============================================================================

# Media files directory for uploaded images
MEDIA_ROOT=media

# Maximum file upload size (in bytes)
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# ArXiv Scraping Configuration
# =============================================================================

# ArXiv API base URL
ARXIV_API_URL=http://export.arxiv.org/api/query

# Default search query for ArXiv papers
DEFAULT_SEARCH_QUERY=machine learning

# Maximum number of papers to download per query
MAX_PAPERS_PER_QUERY=100

# =============================================================================
# Vectorization Configuration
# =============================================================================

# CLIP model name for embeddings
CLIP_MODEL_NAME=ViT-B/32

# Embedding dimension (must match CLIP model)
EMBEDDING_DIM=512

# Batch size for processing embeddings
BATCH_SIZE=32

# =============================================================================
# Search Configuration
# =============================================================================

# Default number of search results to return
DEFAULT_SEARCH_RESULTS=5

# Maximum number of search results allowed
MAX_SEARCH_RESULTS=50

# Similarity score threshold (0.0 to 1.0)
SIMILARITY_THRESHOLD=0.1

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# =============================================================================
# Performance Configuration
# =============================================================================

# Number of worker processes for processing
NUM_WORKERS=4

# Enable GPU acceleration (set to True if CUDA is available)
USE_GPU=False

# Cache timeout in seconds
CACHE_TIMEOUT=3600

# =============================================================================
# Development Configuration
# =============================================================================

# Enable development mode features
DEV_MODE=True

# Skip SSL verification (development only)
SKIP_SSL_VERIFY=False

# Mock external APIs for testing
MOCK_APIS=False